<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionImageView">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

    <style name="LabelText">
        <item name="android:layout_marginTop">1dp</item>
        <item name="fontFamily">@font/koni_black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:shadowColor">#10759C</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/koni_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">#80000000</item>
    </style>

    <style name="SettingsButton" parent="android:Widget">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

    <style name="SettingsLabel">
        <item name="fontFamily">@font/koni_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ActionButton">
        <item name="android:background">@drawable/action_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/koni_black</item>
    </style>

    <style name="ImprovementLabel">
        <item name="fontFamily">@font/koni_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">7sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ImprovementLabelSmall" parent="ImprovementLabel">
        <item name="android:textSize">5sp</item>
    </style>
</resources>